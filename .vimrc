syntax on
colorscheme monokai

set autoread
set number	
set linebreak	
set showbreak=+++
set showmatch	
set visualbell	
 
set hlsearch	
set ignorecase	
set incsearch	
 
set autoindent	
set shiftwidth=4
set smartindent	
set smarttab	
set softtabstop=4
 

set ruler
 
set undolevels=1000	
set backspace=indent,eol,start	
